<style lang="scss">
  .hand {
    position: fixed;
    bottom: -30px;
    font-size: 4rem;
    animation: fade-in-bottom 1s 3.5s cubic-bezier(0.47, 0, 0.745, 0.715) both;

    @media screen and (width <= 768px) {
      bottom: -10px;
      font-size: 1.5rem;
    }

    &:nth-of-type(1) {
      left: 0;
    }

    &:nth-of-type(2) {
      left: 10vw;
    }

    &:nth-of-type(3) {
      left: 20vw;
    }

    &:nth-of-type(4) {
      left: 30vw;
    }

    &:nth-of-type(5) {
      left: 40vw;
    }

    &:nth-of-type(6) {
      left: 50vw;
    }

    &:nth-of-type(7) {
      left: 60vw;
    }

    &:nth-of-type(8) {
      left: 70vw;
    }

    &:nth-of-type(9) {
      left: 80vw;
    }

    &:nth-of-type(10) {
      left: 90vw;
    }
  }
</style>
