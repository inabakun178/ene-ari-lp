---
import "@styles/animation.scss";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<h2 class="title">{title}</h2>

<style lang="scss">
  .title {
    margin-bottom: 50px;
    font-size: 4rem;
    letter-spacing: 0.1em;
    text-shadow: 0 0 10px #2e89e4;
    animation: fade-in-bottom 0.7s 0s cubic-bezier(0.47, 0, 0.745, 0.715) both;

    @media screen and (width <= 768px) {
      margin-bottom: 30px;
      font-size: 2.5rem;
    }
  }
</style>
