---
import "@styles/reset.scss";
import Header from "@components/Header.astro";
import Hands from "@components/Hands.astro";
// TODO: VScodeでAstro componentの入力補完が効くようにする

interface Props {
  title: string;
}

const { title } = Astro.props;
const white = "#fafafa";
const black = "#222";
---

<!doctype html>
<html lang="ja">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="呪力ゼロ、拳のみ、勝者あり。エネルギー・・・吸収・・・アリーナ。エネアリエネアリの非公式ファンサイトです。"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Hands />
  </body>
</html>

<style is:global lang="scss" define:vars={{ white, black }}>
  html {
    font-family: "游明朝体", yumincho, "游明朝", "yu mincho",
      "ヒラギノ明朝 pron w3", "hiragino mincho pron w3", "HiraMinProN-W3",
      "ヒラギノ明朝 pron", "hiragino mincho pron", "ヒラギノ明朝 pro",
      "hiragino mincho pro", "hgs明朝e", "ＭＳ Ｐ明朝", "ms pmincho", serif;
    background: var(--black);
    color: var(--white);
  }

  body {
    background: url("../images/jyujyutsu-background.jpg") no-repeat center /
      cover;
    background-attachment: fixed;

    // noise
    &::before {
      content: "";
      width: 100vw;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      background: url("../images/noise.gif") repeat;
      pointer-events: none;
      opacity: 0.2;
      z-index: 0;
    }
  }

  a {
    color: var(--white);
    text-decoration: none;
    transition: 0.4s;

    &:hover {
      opacity: 0.6;
    }
  }

  *::selection {
    background-color: var(--white);
    color: var(--black);
  }

  .spInline {
    display: none;

    @media screen and (width <= 768px) {
      display: inline;
    }
  }
</style>
